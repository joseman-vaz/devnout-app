<body class="post_create_page">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="form_container">
          <h2 class="display-4">New devnout</h2>
          <form class="create_form mb-3" action="/post-create" method="POST">
            <div class="mb-3">
              <label class="mb-2" for="title">Title:</label>
              <input
                type="text"
                id="title"
                name="title"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label class="mb-2" for="content">Content:</label>
              <textarea
                id="content"
                name="content"
                class="form-control"
                required
              ></textarea>
            </div>
            <button
              class="createBtn btn btn-secondary btn-lg"
              type="submit"
            >Create devnout</button>
          </form>
          <a class="post_create_link_home" href="/">Home</a>
          <a class="post_create_link_home" href="/posts">See all nuots</a>
        </div>
      </div>
    </div>
  </div>
</body>